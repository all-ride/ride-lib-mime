{
    "name": "ride/lib-mime",
    "description": "Library for dealing with MIME types in the Ride framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Joris Vandeweerd",
            "email": "joris@statik.be"
        }
    ],
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8 | ^5.5 | ^6.5"
    },
    "suggest": {
        "ext-fileinfo": "using finfo_ functions to create the Fileinfo Mime sniffer"
    },
    "autoload": {
        "psr-0": {
            "ride\\library\\mime\\": ["src/"],
            "ride\\service\\MimeService": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-0": {
            "ride\\library\\mime\\": ["test/src/"],
            "ride\\service\\MimeService": ["test/src/"]
        }
    }
}
